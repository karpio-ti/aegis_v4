<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <TextView
        android:id="@+id/instructionsTitle"
        android:layout_width="305dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="11dp"
        android:layout_marginEnd="94dp"
        android:layout_marginBottom="597dp"
        android:text="Instrucciones:"
        android:textColor="@android:color/darker_gray"
        android:textSize="34sp" />

    <TextView
        android:id="@+id/instructionsTextView"
        android:layout_width="378dp"
        android:layout_height="483dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="14dp"
        android:layout_marginTop="147dp"
        android:layout_marginEnd="19dp"
        android:text="Para comenzar a utilizar la aplicación se debe seleccionar la opción BUSCAR PRODUCTO.\n\nAutomáticamente se habilitará la cámara para Escanear el código QR disponible en el producto y desplegará en pantalla la nueva información de la etiqueta.\n\nEl servicio buscará el nuevo precio del producto, y desplegará en pantalla la nueva información de la etiqueta.\n\nSe habilitarán las opciones de IMPRIMIR ETIQUETA, BUSCAR NUEVO PRODUCTO y SALIR.\n\nIMPORTANTE: Para que la aplicación pueda imprimir la nueva etiqueta, este dispositivo debe estar vinculado con la impresora a través de Bluetooth."
        android:textColor="@android:color/darker_gray"
        android:textSize="19sp" />

    <Button
        android:id="@+id/buscarProducto"
        android:layout_width="387dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/instructionsTextView"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="14dp"
        android:backgroundTint="@android:color/holo_orange_light"
        android:text="BUSCAR PRODUCTO"
        android:textColor="@android:color/white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="73dp"
        android:background="#2196F3"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/titleTextView"
            android:layout_width="357dp"
            android:layout_height="50dp"
            android:layout_marginStart="49dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="44dp"
            android:text="Cambio de Precio en Góndola"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold" />
    </LinearLayout>

</RelativeLayout>