<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="#015ACF"
        android:gravity="center"
        android:orientation="vertical"> <!-- Asegura que el contenido esté centrado dentro del LinearLayout -->

        <!-- Mueve el TextView aquí para que esté dentro del LinearLayout -->
        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Cambio de precio en góndola"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            app:autoSizeTextType="uniform" />


        <TextView
            android:id="@+id/localNumberTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Local: ---"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/instructionsTitle"
        android:layout_width="295dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout2"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="21dp"
        android:layout_marginTop="19dp"
        android:layout_marginEnd="95dp"
        android:text="Instrucciones:"
        android:textColor="@android:color/darker_gray"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/instructionsTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/instructionsTitle"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="22dp"
        android:layout_marginTop="23dp"
        android:layout_marginEnd="28dp"
        android:text="Para comenzar a utilizar la aplicación se debe seleccionar la opción BUSCAR PRODUCTO.\n\nAutomáticamente se habilitará la cámara para Escanear el código QR disponible en el producto y desplegará en pantalla la nueva información de la etiqueta.\n\nEl servicio buscará el nuevo precio del producto, y desplegará en pantalla la nueva información de la etiqueta.\n\nSe habilitarán las opciones de IMPRIMIR ETIQUETA, BUSCAR NUEVO PRODUCTO y SALIR.\n\n"
        android:textColor="@android:color/darker_gray"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/importanteTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/instructionsTextView"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="22dp"
        android:layout_marginTop="-3dp"
        android:layout_marginEnd="15dp"
        android:text="IMPORTANTE: Para que la aplicación pueda imprimir la nueva etiqueta, este dispositivo debe estar vinculado con la impresora a través de Bluetooth."
        android:textColor="@android:color/darker_gray"
        android:textSize="14sp" />

    <Button
        android:id="@+id/buscarProducto"
        android:layout_width="387dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/importanteTextView"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="29dp"
        android:layout_marginEnd="19dp"
        android:backgroundTint="@android:color/holo_orange_light"
        android:text="BUSCAR PRODUCTO"
        android:textColor="@android:color/white" />

</RelativeLayout>