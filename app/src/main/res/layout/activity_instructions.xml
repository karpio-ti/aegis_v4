<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="#1692F0"
        android:orientation="vertical"
        android:gravity="center"> <!-- Asegura que el contenido esté centrado dentro del LinearLayout -->

        <!-- Mueve el TextView aquí para que esté dentro del LinearLayout -->
        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cambio de precio en góndola"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            app:autoSizeTextType="uniform" />
    </LinearLayout>

    <TextView
        android:id="@+id/instructionsTitle"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_below="@+id/linearLayout2"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="11dp"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="93dp"
        android:text="Instrucciones:"
        android:textColor="@android:color/darker_gray"
        android:textSize="34sp" />

    <TextView
        android:id="@+id/instructionsTextView"
        android:layout_width="378dp"
        android:layout_height="483dp"
        android:layout_below="@+id/instructionsTitle"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="22dp"
        android:text="Para comenzar a utilizar la aplicación se debe seleccionar la opción BUSCAR PRODUCTO.\n\nAutomáticamente se habilitará la cámara para Escanear el código QR disponible en el producto y desplegará en pantalla la nueva información de la etiqueta.\n\nEl servicio buscará el nuevo precio del producto, y desplegará en pantalla la nueva información de la etiqueta.\n\nSe habilitarán las opciones de IMPRIMIR ETIQUETA, BUSCAR NUEVO PRODUCTO y SALIR.\n\nIMPORTANTE: Para que la aplicación pueda imprimir la nueva etiqueta, este dispositivo debe estar vinculado con la impresora a través de Bluetooth."
        android:textColor="@android:color/darker_gray"
        android:textSize="19sp" />

    <Button
        android:id="@+id/buscarProducto"
        android:layout_width="387dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/instructionsTextView"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="23dp"
        android:layout_marginEnd="14dp"
        android:backgroundTint="@android:color/holo_orange_light"
        android:text="BUSCAR PRODUCTO"
        android:textColor="@android:color/white" />

</RelativeLayout>