<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <!-- Barra de título -->

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="#015ACF"
        android:gravity="center"
        android:orientation="vertical">

        <!-- Título principal -->
        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Imprimir etiqueta"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutEtiquetaFinal"
        android:layout_width="match_parent"
        android:layout_height="414dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="293dp"
            android:layout_height="370dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nombreProd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|center_vertical"
                android:text="V HUACHALOMO"
                android:textColor="#000000"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/brandName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="TextView"
                android:textColor="#070101"
                android:textSize="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp">

                <TextView
                    android:id="@+id/resolucion"
                    android:layout_width="266dp"
                    android:layout_height="wrap_content"
                    android:text="RAZON SOCIAL"
                    android:textColor="#000000"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/fecImpresion"
                    android:layout_width="256dp"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:textSize="14dp" />

                <LinearLayout
                    android:layout_width="276dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TableLayout
                        android:layout_width="257dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="0dp"
                        android:layout_marginTop="0dp"

                        android:stretchColumns="1">

                        <!-- Fila 1: Fechas -->
                        <TableRow>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@drawable/border_background"
                                android:orientation="vertical"
                                android:padding="8dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="Fecha ELAB/ENV"
                                    android:textColor="#000000"
                                    android:textSize="13sp" />

                                <TextView
                                    android:id="@+id/fecElab"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:textColor="#000000"
                                    android:textSize="14sp" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@drawable/border_background"
                                android:orientation="vertical"
                                android:padding="8dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="Fecha Venc."
                                    android:textColor="#000000"
                                    android:textSize="13sp" />

                                <TextView
                                    android:id="@+id/fecVenc"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:textColor="#000000"
                                    android:textSize="14sp" />

                            </LinearLayout>
                        </TableRow>

                        <!-- Fila 2: Precio Unitario y Peso/Pieza -->
                        <TableRow>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@drawable/border_background"
                                android:orientation="vertical"
                                android:padding="8dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="Peso/Pieza"
                                    android:textColor="#000000"
                                    android:textSize="13sp" />

                                <TextView
                                    android:id="@+id/peso"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:textColor="#000000"
                                    android:textSize="14sp" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@drawable/border_background"
                                android:orientation="vertical"
                                android:padding="8dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="Precio(Kg)/UND"
                                    android:textColor="#000000"
                                    android:textSize="13sp" />

                                <TextView
                                    android:id="@+id/precioActual"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:textColor="#000000"
                                    android:textSize="14sp" />

                            </LinearLayout>
                        </TableRow>

                        <!-- Fila para el precio total, centrado y ocupando todo el espacio -->
                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:layout_width="299dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@drawable/border_background"
                                android:gravity="center"
                                android:orientation="vertical"

                                >

                                <TextView
                                    android:id="@+id/textView"
                                    android:layout_width="173dp"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="PRECIO TOTAL"
                                    android:textColor="#000000"
                                    android:textSize="13sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/precioTotal"
                                    android:layout_width="172dp"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:textColor="#000000"
                                    android:textSize="24sp"
                                    android:textStyle="bold" />
                            </LinearLayout>
                        </TableRow>

                    </TableLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/barcode_image"
            android:layout_width="85dp"
            android:layout_height="338dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="0dp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY" />
    </LinearLayout>

    <Button
        android:id="@+id/buttonPrint"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="40dp"
        android:backgroundTint="#FF762F"
        android:drawableLeft="@drawable/print_icon_resized"
        android:text="Imprimir etiqueta"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        android:textStyle="bold" />

</LinearLayout>